forward = 1
up = 2
down = 3
 
function tDig(dir)
    -- 1 - вперёд, 2 - вверх, 3 - вниз
        --write("dig started \n")
        if dir == 1 then
            while (turtle.detect()) do
                turtle.dig()
            end
        end    
        if dir == 2 then
            while (turtle.detectUp()) do
                turtle.digUp()
            end
        end
        if dir == 3 then
            while (turtle.detectDown()) do
                turtle.digDown()
            end
        end
        --write("dig ended \n")
end
 
function tMoveForward()
    while (not turtle.forward()) do
        turtle.attack()
    end
end
 
 
function digTunnelSection(count)
  for i = 1, count do
    tDig(forward)
    tMoveForward()
    tDig(up)
    tDig(down)
 end
end
 
function dropUnneccesary()
   for i = 3, 16 do
      n = turtle.getItemDetail(i).name
      if (n == "minecraft:dirt") or (n == "minecraft:dolomite) or (n == "minecraft:cobblestone") or (n == "minecraft:diorite") or (n == "minecraft:granite") or (n == "minecraft:andesite") then
         turtle.dropDown(i)
      end
   end
end
function main()
    while (true) do
        for i = 1, 15 do
            tDig(up)
            tDig(down)
            digTunnelSection(25)
            turtle.turnLeft()
            tDig(forward)
            tMoveForward()
            tDig(forward)
            turtle.select(2)
            turtle.place()
            turtle.turnLeft()
            digTunnelSection(25)
            turtle.turnRight()
            tDig(forward)
            tMoveForward()
            tDig(forward)
            turtle.select(2)
            turtle.place()
            turtle.turnRight()
        end
        turtle.turnLeft()
        turtle.turnLeft()
        turtle.select(1)
        tDig(forward)
        turtle.place()
        for i = 3, 16 do
            turtle.select(i)
            turtle.refuel(15)
            turtle.drop()
        end
        turtle.select(1)
        turtle.turnRight()
        turtle.turnRight()
    end
end
 
main()
